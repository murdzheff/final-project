{
  "version": 2,
  "builds": [
    { "src": "server/**", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "src/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "server/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
